{
  "manifest_version": 3,
  "name": "Time Tracker & Productivity Analyzer",
  "version": "1.0",
  "description": "Tracks website time usage and classifies productivity",
  
  "permissions": [
    "tabs",
    "storage",
    "idle"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Productivity Tracker"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
